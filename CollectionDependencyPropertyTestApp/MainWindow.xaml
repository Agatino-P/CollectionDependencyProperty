<Window
    x:Class="CollectionDependencyPropertyTestApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CollectionDependencyPropertyTestApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="MWindow"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ListBox ItemsSource="{Binding Strings}" />
        <Button
            Grid.Column="1"
            Command="{Binding ChangeStringsCmd}"
            Content="ChangeStringsCmd" />
        <local:Lister
            x:Name="lister"
            Grid.Row="1"
            Strings="{Binding ElementName=MWindow, Path=Strings}" />
        <Button
            x:Name="btnStrings"
            Grid.Row="1"
            Grid.Column="1"
            Click="btnStrings_Click"
            Content="ChangeStrings" />
    </Grid>

</Window>
